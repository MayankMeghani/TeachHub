@model IEnumerable<TeachHub.Models.Course>
@{
    ViewData["Title"] = "Courses";
}

<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4 text-center font-weight-bold">Courses</h1>
        <a asp-action="Create" class="btn btn-primary btn-lg shadow-sm">Create New</a>
    </div>

    <!-- Display error message if profile is incomplete -->
    @if (TempData["ProfileIncompleteError"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
            @TempData["ProfileIncompleteError"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow-lg" style="border-radius: 12px;">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-bordered align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Title)</th>
                            <th>@Html.DisplayNameFor(model => model.Description)</th>
                            <th>@Html.DisplayNameFor(model => model.Price)</th>
                            <th>@Html.DisplayNameFor(model => model.CreatedAt)</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="fw-bold">@Html.DisplayFor(modelItem => item.Title)</td>
                                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                                <td>@Html.DisplayFor(modelItem => item.Price)</td>
                                <td>@Html.DisplayFor(modelItem => item.CreatedAt)</td>
                                <td class="text-center">
                                    <!-- Center the actions here -->
                                    <a asp-action="Edit" asp-route-id="@item.CourseId" class="btn btn-warning btn-sm mx-1">Edit</a>
                                    <a asp-action="Details" asp-route-id="@item.CourseId" class="btn btn-info btn-sm text-white mx-1">Details</a>
                                    <a asp-action="Delete" asp-route-id="@item.CourseId" class="btn btn-danger btn-sm mx-1">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f8f9fa; /* Light background */
    }

    .card {
        background: white; /* White card background */
        border-radius: 12px; /* Rounded corners */
    }

    .table th {
        background-color: #343a40; /* Dark table header */
        color: white;
    }

    .table-hover tbody tr:hover {
        background-color: #e0e0e0; /* Light gray on hover */
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        transition: background-color 0.3s, border-color 0.3s;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #004085;
        }

    .btn-warning, .btn-info, .btn-danger {
        transition: background-color 0.3s, border-color 0.3s;
    }

        .btn-warning:hover {
            background-color: #e0a800;
            border-color: #d39e00;
        }

        .btn-info:hover {
            background-color: #117a8b;
            border-color: #0f6674;
        }

        .btn-danger:hover {
            background-color: #c82333;
            border-color: #bd2130;
        }
</style>
