@model TeachHub.Models.Course
@{
    ViewData["Title"] = "Course Details";
}

<div class="container mt-5">
    <h1 class="mb-4 text-center display-4">Course Details</h1>

    <div class="card mb-4 shadow-lg border-light">
        <div class="card-header bg-primary text-white text-center">
            <h4 class="mb-0">Course Information</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 fw-bold">Title:</dt>
                <dd class="col-sm-9 fs-5">@Html.DisplayFor(model => model.Title)</dd>

                <dt class="col-sm-3 fw-bold">Description:</dt>
                <dd class="col-sm-9 fs-5">@Html.DisplayFor(model => model.Description)</dd>

                <dt class="col-sm-3 fw-bold">Status:</dt>
                <dd class="col-sm-9 fs-5">
                    @(Model.IsActive ? "Active" : "Inactive")
                </dd>

                <dt class="col-sm-3 fw-bold">Created At:</dt>
                <dd class="col-sm-9 fs-5">@Html.DisplayFor(model => model.CreatedAt)</dd>

                <dt class="col-sm-3 fw-bold">Teacher:</dt>
                <dd class="col-sm-9 fs-5">@Html.DisplayFor(model => model.Teacher.Name)</dd>

                <dt class="col-sm-3 fw-bold">Rating:</dt>
                <dd class="col-sm-9 fs-5">
                    @* Display star rating *@
                    @{
                        var rating = Model.Rating; // Assuming rating is a float or double
                        var fullStars = (int)Math.Floor(rating); // Full stars based on the integer part of rating
                        var halfStar = (rating - fullStars) >= 0.5 ? true : false; // Check for half star
                        var emptyStars = 5 - fullStars - (halfStar ? 1 : 0); // Remaining stars
                    }
                    @* Render full stars *@
                    @for (var i = 0; i < fullStars; i++)
                    {
                        <span class="text-warning">&#9733;</span> @* Full star *@
                    }
                    @* Render half star if applicable *@
                    @if (halfStar)
                    {
                    <span class="text-warning">&#9734;</span> @* Half star *@
                    }
                    @* Render empty stars *@
                    @for (var i = 0; i < emptyStars; i++)
                    {
                        <span class="text-secondary">&#9734;</span> @* Empty star *@
                    }
                    <span class="text-muted">(@Model.Rating.ToString("0.0"))</span> @* Show numeric rating *@
                </dd>
            </dl>
        </div>
    </div>

    <div class="mb-4">
        <h4 class="text-primary">Course Videos</h4>
        <hr class="bg-primary" />
        @if (Model.Videos != null && Model.Videos.Any())
        {
            <div class="row g-4">
                @foreach (var video in Model.Videos)
                {
                    <div class="col-lg-4 col-md-6 col-sm-12">
                        <div class="card shadow-lg h-100">
                            <div class="position-relative">
                                <video class="card-img-top rounded-top" controls>
                                    <source src="@video.VideoUrl" type="video/mp4">
                                    Your browser does not support the video tag.
                                </video>
                                <div class="position-absolute top-0 start-0 bg-danger text-white p-2 rounded-end">
                                    <strong>New</strong>
                                </div>
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">@video.Title</h5>
                                <p class="card-text text-muted">Uploaded: @video.UploadedAt.ToString("yyyy-MM-dd HH:mm")</p>
                                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#videoModal-@video.VideoId">
                                    Watch in Fullscreen
                                </button>
                            </div>
                        </div>

                        <!-- Modal -->
                        <div class="modal fade" id="videoModal-@video.VideoId" tabindex="-1" aria-labelledby="videoModalLabel-@video.VideoId" aria-hidden="true">
                            <div class="modal-dialog modal-lg">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="videoModalLabel-@video.VideoId">@video.Title</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <video class="w-100" controls>
                                            <source src="@video.VideoUrl" type="video/mp4">
                                            Your browser does not support the video tag.
                                        </video>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="alert alert-warning" role="alert">
                No videos available for this course.
            </div>
        }
    </div>

    <div class="d-flex justify-content-between mb-4">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        @* <form asp-action="Enroll" method="get">
        <input type="hidden" name="courseId" value="@Model.CourseId" />
        <button type="submit" class="btn btn-success">Enroll Now</button>
        </form> *@
    </div>
</div>
