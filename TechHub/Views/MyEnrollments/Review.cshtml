@model TeachHub.Models.Review

@{
    ViewData["Title"] = "Review";
}

<style>
    .review-container {
        border: 2px solid #ccc;
        padding: 20px;
        max-width: 400px;
        margin: 50px auto;
        background-color: #f9f9f9;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

        .review-container h1 {
            text-align: center;
            margin-bottom: 20px;
            color: #333;
        }

    .form-group {
        position: relative;
        margin-bottom: 15px;
    }

        .form-group label {
            position: absolute;
            top: -10px;
            left: 10px;
            font-size: 12px;
            background: #f9f9f9;
            padding: 0 5px; /* Add padding for label background */
            color: #333;
        }

    .form-control {
        border: 1px solid #ccc;
        border-radius: 5px;
        padding: 10px;
        width: 100%;
    }

    button[type="submit"] {
        width: 100%;
        padding: 10px;
        margin-top: 10px;
    }

    .text-danger {
        margin-top: 5px;
        font-size: 0.9em;
    }

    .rating {
        display: flex;
        justify-content: center;
        margin-bottom: 15px;
    }

    .star {
        font-size: 30px;
        color: #ccc;
        cursor: pointer;
    }

        .star.checked {
            color: gold;
        }
</style>

<div class="review-container">
    <h1>Review</h1>
    <hr />

    <!-- Display general errors -->
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <form asp-action="Review">
        <div class="form-group">
            <label asp-for="Content" class="control-label"></label>
            <input asp-for="Content" class="form-control" />
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label class="control-label">Rating</label>
            <div class="rating">
                <span class="star" data-value="1">&#9733;</span>
                <span class="star" data-value="2">&#9733;</span>
                <span class="star" data-value="3">&#9733;</span>
                <span class="star" data-value="4">&#9733;</span>
                <span class="star" data-value="5">&#9733;</span>
            </div>
            <input type="hidden" asp-for="Rating" id="Rating" />
            <span asp-validation-for="Rating" class="text-danger"></span>
        </div>

        @* Pass the CourseId as a hidden field *@
        <input type="hidden" asp-for="CourseId" />

        @* Pass the LearnerId as a hidden field *@
        <input type="hidden" asp-for="LearnerId" />

        @* Pass the CreatedAt as a hidden field (if it's set programmatically) *@
        <input type="hidden" asp-for="CreatedAt" />

        <button type="submit" class="btn btn-primary">Create</button>
    </form>
</div>

<div class="text-center mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    <script>
        const stars = document.querySelectorAll('.star');
        const ratingInput = document.getElementById('Rating');

        stars.forEach(star => {
            star.addEventListener('click', function () {
                const rating = this.getAttribute('data-value');

                // Clear previous selections
                stars.forEach(s => s.classList.remove('checked'));

                // Highlight the selected stars
                for (let i = 0; i < rating; i++) {
                    stars[i].classList.add('checked');
                }

                // Set the hidden input value to the selected rating
                ratingInput.value = rating;
            });
        });
    </script>
}
