@model TeachHub.Models.Review

@{
    ViewData["Title"] = "Edit Review";
}

<style>
    .edit-review-container {
        border: 2px solid #ccc;
        padding: 20px;
        max-width: 600px;
        margin: 50px auto;
        background-color: #f9f9f9;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

        .edit-review-container h1, .edit-review-container h4 {
            text-align: center;
            margin-bottom: 20px;
            color: #333;
        }

    .form-group {
        position: relative;
        margin-bottom: 15px;
    }

        .form-group label {
            position: absolute;
            top: -10px;
            left: 10px;
            font-size: 12px;
            background: #f9f9f9;
            padding: 0 5px;
            color: #333;
        }

    .form-control {
        border: 1px solid #ccc;
        border-radius: 5px;
        padding: 10px;
        width: 100%;
    }

    button[type="submit"] {
        width: 100%;
        padding: 10px;
        margin-top: 10px;
    }

    .text-danger {
        margin-top: 5px;
        font-size: 0.9em;
    }

    .back-link {
        text-align: center;
        margin-top: 20px;
    }

    .rating {
        display: flex;
        justify-content: center;
        margin-bottom: 15px;
    }

    .star {
        font-size: 30px;
        color: #ccc;
        cursor: pointer;
    }

        .star.checked {
            color: gold;
        }
</style>

<div class="edit-review-container">
    <h1>Edit Review</h1>
    <h4>Update Review Details</h4>
    <hr />

    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <!-- Hidden fields for non-editable properties -->
        <input type="hidden" asp-for="ReviewId" />
        <input type="hidden" asp-for="CreatedAt" />
        <input type="hidden" asp-for="CourseId" />
        <input type="hidden" asp-for="LearnerId" />

        <!-- Editable fields -->
        <div class="form-group">
            <label asp-for="Content" class="control-label">Review Content</label>
            <input asp-for="Content" class="form-control" placeholder="Enter your review content" required />
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label class="control-label">Rating</label>
            <div class="rating">
                <span class="star" data-value="1">&#9733;</span>
                <span class="star" data-value="2">&#9733;</span>
                <span class="star" data-value="3">&#9733;</span>
                <span class="star" data-value="4">&#9733;</span>
                <span class="star" data-value="5">&#9733;</span>
            </div>
            <input type="hidden" asp-for="Rating" id="Rating" value="@Model.Rating" />
            <span asp-validation-for="Rating" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Save Changes" class="btn btn-success" />
        </div>
    </form>
    <div class="back-link">
        <a asp-action="Index" class="btn btn-secondary">← Back to List</a>
    </div>
</div>

@section Scripts {
    <script>
        const stars = document.querySelectorAll('.star');
        const ratingInput = document.getElementById('Rating');
        const currentRating = parseInt(ratingInput.value);

        // Set the initial star rating based on the model's rating
        stars.forEach((star, index) => {
            if (index < currentRating) {
                star.classList.add('checked');
            }

            star.addEventListener('click', function () {
                const rating = this.getAttribute('data-value');

                // Clear previous selections
                stars.forEach(s => s.classList.remove('checked'));

                // Highlight the selected stars
                for (let i = 0; i < rating; i++) {
                    stars[i].classList.add('checked');
                }

                // Set the hidden input value to the selected rating
                ratingInput.value = rating;
            });
        });
    </script>
}
