@model IEnumerable<TeachHub.Models.Course>

@{
    ViewData["Title"] = "Course List";
}

<div class="container mt-5">
    <h1 class="mb-4 text-center font-weight-bold">Course List</h1>

    <form method="get" asp-action="Index">
        <div class="input-group mb-3">
            <input type="text" class="form-control" name="searchTerm" placeholder="Search by course title or teacher name" value="@ViewData["SearchTerm"]" aria-label="Search" />
            <button class="btn btn-outline-secondary" type="submit">Search</button>
        </div>
    </form>

    <div class="card shadow-lg" style="border-radius: 12px;">
        <div class="card-body">
            <table class="table table-striped table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Price</th>
                        <th>Created At</th>
                        <th>Teacher</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Title</td>
                            <td>@item.Description</td>
                            <td>@item.Price.ToString("C")</td>
                            <td>@item.CreatedAt.ToString("MM/dd/yyyy")</td>
                            <td>
                                @if (item.Teacher != null)
                                {
                                    @item.Teacher.Name
                                }
                                else
                                {
                                    <span class="text-muted">N/A</span>
                                }
                            </td>
                            <td class="text-center">
                                <a asp-action="Details" asp-route-id="@item.CourseId" class="btn btn-success btn-sm" data-toggle="tooltip" data-placement="top" title="View Details">
                                    <i class="fas fa-info-circle"></i>
                                    Details
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            $('[data-toggle="tooltip"]').tooltip(); // Initialize tooltips
        });
    </script>
}

